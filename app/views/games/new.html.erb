<h1>New Game</h1>

<% @letters.each do |letter|  %>
 <li><%= letter %></li>
<% end %>

<p>Write the longest word you can using the letters above!</p>
<form action="/score" data-turbo="false" method="post">
  <input type="text" name="attempt" placeholder="best word you can find?">
  <input type="hidden" name="letters" value="<%= @letters.join(' ') %>">
  <input type="submit" value="Play!" class=btn-primary>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
